<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sender.AddNewDeliveryFragment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Title"
        android:ems="10"
        android:id="@+id/input_title"
        app:layout_constraintTop_toBottomOf="@+id/form_title" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"
        app:layout_constraintHorizontal_bias="0.19"/>
    <TextView
        android:text="New delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/form_title" android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="64dp"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:ems="10"
        android:id="@+id/input_description"
        android:inputType="textMultiLine"
        android:gravity="start|top"
        app:layout_constraintStart_toStartOf="@+id/input_title" app:layout_constraintEnd_toEndOf="@+id/input_title"
        app:layout_constraintTop_toBottomOf="@+id/input_title"/>
    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_add" app:layout_constraintTop_toBottomOf="@+id/input_description"
        app:layout_constraintStart_toStartOf="@+id/input_description" android:layout_marginTop="32dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
