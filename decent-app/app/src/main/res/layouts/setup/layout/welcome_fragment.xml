<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.welcome.WelcomeFragment">


    <Button
        android:text="@string/button_just_receive_packages"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_just_receive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="80dp"/>
    <TextView
        android:text="@string/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="88dp"/>
    <Button
        android:text="@string/button_send_or_deliver"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_send_or_deliver"
        style="@style/Widget.AppCompat.Button" app:layout_constraintTop_toBottomOf="@+id/button_just_receive"
        app:layout_constraintStart_toStartOf="@+id/button_just_receive"/>
</androidx.constraintlayout.widget.ConstraintLayout>