<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/authenticationFragment"
        android:name="eu.bwbw.decent.ui.authentication.AuthenticationFragment"
        android:label="Wallet setup"
        tools:layout="@layout/authentication_fragment">
        <action
            android:id="@+id/action_authenticationFragment_to_senderFragment"
            app:destination="@id/senderFragment"
            app:popUpTo="@+id/mobile_navigation"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_authenticationFragment_to_courierFragment"
            app:destination="@id/courierFragment"
            app:popUpTo="@+id/mobile_navigation"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="eu.bwbw.decent.ui.welcome.WelcomeFragment"
        android:label="welcome_fragment"
        tools:layout="@layout/welcome_fragment">
        <action
            android:id="@+id/action_welcomeFragment_to_authenticationFragment"
            app:destination="@id/authenticationFragment"/>
        <action
            android:id="@+id/action_welcomeFragment_to_receiverFragment"
            app:destination="@id/receiverFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@+id/mobile_navigation"/>
        <action
            android:id="@+id/action_welcomeFragment_to_senderFragment"
            app:destination="@id/senderFragment"
            app:popUpTo="@+id/mobile_navigation"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/addNewDeliveryFragment"
        android:name="eu.bwbw.decent.ui.sender.addnewdelivery.AddNewDeliveryFragment"
        android:label="Add New Delivery"
        tools:layout="@layout/add_new_delivery_fragment"/>
    <fragment
        android:id="@+id/courierFragment"
        android:name="eu.bwbw.decent.ui.courier.CourierFragment"
        android:label="Delivery orders">
        <action
            android:id="@+id/action_courierFragment_to_deliveryApprovalRequest"
            app:destination="@id/deliveryApprovalRequest"/>
        <action
            android:id="@+id/action_courierFragment_to_authenticationFragment"
            app:destination="@id/authenticationFragment"
            app:popUpTo="@id/receiverFragment"/>
        <action
            android:id="@+id/action_courierFragment_to_deliveryDetailsCourierFragment"
            app:destination="@id/deliveryDetailsCourierFragment"/>
    </fragment>
    <fragment
        android:id="@+id/receiverFragment"
        android:name="eu.bwbw.decent.ui.receiver.ReceiverFragment"
        android:label="My incoming deliveries">
        <action
            android:id="@+id/action_receiverFragment_to_deliveryDetailsReceiverFragment"
            app:destination="@id/deliveryDetailsReceiverFragment"/>
    </fragment>
    <fragment
        android:id="@+id/senderFragment"
        android:name="eu.bwbw.decent.ui.sender.SenderFragment"
        android:label="My deliveries">
        <action
            android:id="@+id/action_senderFragment_to_addNewDeliveryFragment"
            app:destination="@id/addNewDeliveryFragment"/>
        <action
            android:id="@+id/action_senderFragment_to_authenticationFragment"
            app:destination="@id/authenticationFragment"
            app:popUpTo="@+id/receiverFragment"/>
        <action
            android:id="@+id/action_senderFragment_to_deliveryDetailsSenderFragment"
            app:destination="@id/deliveryDetailsSenderFragment"/>
    </fragment>
    <fragment
        android:id="@+id/approvePackage"
        android:name="eu.bwbw.decent.ui.receiver.approve.ApprovePackageFragment"
        android:label="Approve package"
        tools:layout="@layout/fragment_approve_package">
        <argument
            android:name="deliveryTitle"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/deliveryApprovalRequest"
        android:name="eu.bwbw.decent.ui.courier.DeliveryApprovalRequest"
        android:label="Delivery approval request"
        tools:layout="@layout/fragment_delivery_approval_request"/>
    <fragment
        android:id="@+id/deliveryDetailsCourierFragment"
        android:name="eu.bwbw.decent.ui.courier.details.DeliveryDetailsCourierFragment"
        android:label="Delivery details">
        <argument
            android:name="deliveryId"
            app:argType="java.math.BigInteger"/>
    </fragment>
    <fragment
        android:id="@+id/deliveryDetailsReceiverFragment"
        android:name="eu.bwbw.decent.ui.receiver.details.DeliveryDetailsReceiverFragment"
        android:label="Delivery details">
        <argument
            android:name="deliveryId"
            app:argType="java.math.BigInteger"/>
        <action
            android:id="@+id/action_deliveryDetailsReceiverFragment_to_approvePackage"
            app:destination="@id/approvePackage"/>
    </fragment>
    <fragment
        android:id="@+id/deliveryDetailsSenderFragment"
        android:name="eu.bwbw.decent.ui.sender.details.DeliveryDetailsSenderFragment"
        android:label="Delivery details">
        <argument
            android:name="deliveryId"
            app:argType="java.math.BigInteger"/>
    </fragment>
    <fragment
        android:id="@+id/toolsFragment"
        android:name="eu.bwbw.decent.ui.tools.ToolsFragment"
        android:label="Tools"
        tools:layout="@layout/fragment_tools">
        <action
            android:id="@+id/action_toolsFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@+id/mobile_navigation"/>
    </fragment>

</navigation>