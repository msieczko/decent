{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "moduleResolution": "node",
    "allowJs": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true
  },
  "include": [
    "test"
  ]
}
